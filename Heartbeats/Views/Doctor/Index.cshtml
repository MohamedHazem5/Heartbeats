@model IEnumerable<Models.Dtos.DoctorDetailsDto>

<section class="doctors-section py-5" dir="rtl">
    <div class="container">
        <h3 class="text-center mb-4">الأطباء المتخصصون</h3>
        <div class="row">
            @foreach (var doctor in Model)
            {
                <div class="col-12 mb-4">
                    <div class="card shadow-lg">
                        <div class="row no-gutters">
                            <!-- Doctor Image -->
                            <div class="col-md-4 text-center d-flex align-items-center justify-content-center p-3">
                                <img src="@(!string.IsNullOrEmpty(doctor.ImageUrl) ? doctor.ImageUrl : "/images/default_image.jpg")"
                                     class="img-fluid rounded doctor-image" alt="@doctor.UserName"
                                     style="max-width: 100%; max-height: 100px;object-fit: cover;border-radius: 10px"
                                     >
                            </div>
                            <!-- Doctor Details -->
                            <div class="col-md-8 text-right">
                                <div class="card-body">
                                    <h5 class="card-title">د. @doctor.UserName</h5>
                                    <p class="card-text">
                                        <strong>التخصص: </strong>@doctor.SpecialtyName
                                    </p>
                                    <p class="card-text">
                                        <strong>نبذة: </strong>@doctor.Bio
                                    </p>                                    
                                </div>
                            </div>                           
                        </div>
                        <div class="card-footer" dir="ltr">
                            <form asp-controller="Appointment" asp-action="Create" method="post" class="d-inline">
                                <input type="hidden" name="doctorId" value="@doctor.Id" />
                                <input type="date" name="appointmentDate" class="form-control mb-2" required
                                       min="@DateTime.Now.ToString("yyyy-MM-dd")" />                                
                                <button type="submit" class="btn btn-primary">حجز موعد</button>
                            </form>
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
</section>
<style>

    .bg-primary {
        background-color: #48bdc5 !important;
    }

    .btn-primary {
        background-color: #48bdc5 !important;
        border-color: #48bdc5 !important;
    }
</style>