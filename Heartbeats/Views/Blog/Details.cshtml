@model Models.Blog

@{
    ViewBag.Title = Model.Title; // Model name in Arabic
}

<!-- عنوان الصفحة -->
<section class="page-title text-center" style="background-image:url(images/background/3.jpg);" dir="rtl">
    <div class="container">
        <div class="title-text">
            <h1>تفاصيل المدونة</h1>
            <ul class="title-menu clearfix">
                <li>
                    <a asp-controller="Home" asp-action="Index">الرئيسية &nbsp;/</a>
                </li>
                <li>تفاصيل المدونة</li>
            </ul>
        </div>
    </div>
</section>
<!-- نهاية عنوان الصفحة -->
<!-- قسم الاتصال -->
<section class="blog-section section style-four style-five" dir="rtl">
    <div class="container">
        <div class="row">
            <div class="col-lg-9">
                <div class="left-side">

                    <div class="item-holder">
                        <div class="image-box">
                            <figure>
                                <a asp-controller="Blog" asp-action="Details"><img loading="lazy" class="img-fluid" src="@Model.ImageUrl" alt=""></a>
                            </figure>
                        </div>
                        <div class="content-text text-right">
                            <h4>@Model.Title</h4>
                            <span>@Model.Author - @Model.CreatedAt</span>
                            <p>
                               @Html.Raw( Model.Description)
                            </p>
@*                             <div class="text">
                                <p>
                                    لأنفسهم يستغلون كل ما في الحياة الحلوة من مكافآت. دعها تتدفق ستعود إليك.
                                </p>
                            </div> *@
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-lg-3">
                <div class="right-side">
                    <div class="text-title">
                        <h6>البحث</h6>
                    </div>
                    <div class="search-box">
                        <form method="get" asp-controller="Blog" asp-action="Search">
                            <input class="form-control" type="search" name="query" placeholder="أدخل للبحث" required="">
                            <button type="submit" class="btn btn-primary mt-2" hidden>بحث</button>
                        </form>
                    </div>
                    <div class="categorise-menu text-right">
                        <div class="text-title">
                            <h6>الفئات</h6>
                        </div>
                        <ul class="categorise-list">
                            @foreach (var category in ViewBag.Categories)
                            {
                                <li>
                                    <a asp-controller="Blog" asp-action="ByCategory" asp-route-categoryId="@category.CategoryId">
                                        @category.Name
                                    </a>
                                </li>
                            }
                        </ul>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- نهاية قسم الاتصال -->
