                                        onclick="uploadImage();this.disabled=true; this.innerHTML='Uploading…';">
                                    رفع الصورة
                                </button>
                            </div>
                        </div>
                    </div>
                <!-- End Action Title -->
                <!-- Begin Action Description -->
@*                 <div class='form-group'>
                    <label for='samsDesc' class='text-primary'>Action Description</label>
                    <textarea class='form-control' id='samsDesc' rows='4' placeholder='Action Description'></textarea>
                    <div class='text-danger collapse' id='valDesc'>Action Description is required.</div>
                </div> *@

                    <div class="col-lg-8 ml-auto">
                        <button type="submit" class="btn btn-warning">حفظ</button>
                    </div>
            </div>
            </form>
        </div>

        
    </div>
</div>

